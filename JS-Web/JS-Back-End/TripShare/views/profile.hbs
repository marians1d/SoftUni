{{#with user}}
<section class="profile col-md-6 text-center col-lg" id="profile-page">
    <div class="profile-container">
        <img class="profile-img" src="/static/images/{{#if isMale}}male{{else}}female{{/if}}.png">
        <p>Email: <span>{{email}}</span></p>
    </div>
    <div class="profile-info">
        <p>Trips History: <span>{{tripHistory.length}}</span> counts</p>

        <div class="trips-info">
            {{#each tripHistory}}
            <p>from <span>{{startPoint}}</span> to <span>{{endPoint}}</span> on <span>{{date}}</span> at <span>{{time}}</span></p>
            {{else}}
            <p>there are no offer trips yet...</p>
            {{/each}}
        </div>

    </div>
</section>
{{/with}}